<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiBankingExercise.Views.Controls.TransactionCard"
             x:Name="root">

    <Border BackgroundColor="{AppThemeBinding Light=White, Dark=#2D2D30}"
            Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"
            StrokeThickness="1"
            Padding="16"
            Margin="8,4">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="12" />
        </Border.StrokeShape>

        <Grid ColumnDefinitions="*,Auto">
            <!-- Transaction Info -->
            <StackLayout Grid.Column="0">
                <Label Text="{Binding Source={x:Reference root}, Path=Transaction.Description}" 
                       FontSize="16" 
                       FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                <Label Text="{Binding Source={x:Reference root}, Path=Transaction.TransactionDate, StringFormat='{0:MMM dd, yyyy}'}" 
                       FontSize="14" 
                       TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" />
                <Label Text="{Binding Source={x:Reference root}, Path=Transaction.TransactionType.Name}" 
                       FontSize="14" 
                       TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" />
            </StackLayout>

            <!-- Amount -->
            <Label Grid.Column="1"
                   Text="{Binding Source={x:Reference root}, Path=Transaction.Amount, StringFormat='{0:C}'}"
                   FontSize="16"
                   FontAttributes="Bold"
                   TextColor="{Binding Source={x:Reference root}, Path=Transaction.TransactionTypeId, Converter={StaticResource TransactionTypeToColorConverter}}"
                   VerticalOptions="Center" />
        </Grid>
    </Border>
</ContentView>