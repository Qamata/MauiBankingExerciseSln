<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiBankingExercise.Views.Controls.AccountCard"
             x:Name="root">

    <Border BackgroundColor="{AppThemeBinding Light=White, Dark=#2D2D30}"
            Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"
            StrokeThickness="1"
            Padding="16"
            Margin="8,4">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="12" />
        </Border.StrokeShape>

        <Grid ColumnDefinitions="Auto,*,Auto">
            <!-- Account Icon -->
            <Border Grid.Column="0" 
                    BackgroundColor="{AppThemeBinding Light=#E3F2FD, Dark=#0D47A1}"
                    HeightRequest="50" 
                    WidthRequest="50"
                    Margin="0,0,12,0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="25" />
                </Border.StrokeShape>
                <Label Text="ðŸ’°" 
                       FontSize="20" 
                       HorizontalOptions="Center" 
                       VerticalOptions="Center" />
            </Border>

            <!-- Account Info -->
            <StackLayout Grid.Column="1" VerticalOptions="Center">
                <Label Text="{Binding Source={x:Reference root}, Path=Account.AccountNumber}" 
                       FontSize="16" 
                       FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                <Label Text="{Binding Source={x:Reference root}, Path=Account.AccountType.Name, StringFormat='Type: {0}'}" 
                       FontSize="14" 
                       TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" />
                <Label Text="{Binding Source={x:Reference root}, Path=Account.AccountBalance, StringFormat='Balance: {0:C}'}" 
                       FontSize="14" 
                       TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" />
            </StackLayout>

            <!-- Status Indicator -->
            <Frame Grid.Column="2" 
                   BackgroundColor="{Binding Source={x:Reference root}, Path=Account.IsActive, Converter={StaticResource BoolToColorConverter}}"
                   CornerRadius="8"
                   Padding="8,4"
                   VerticalOptions="Center">
                <Label Text="{Binding Source={x:Reference root}, Path=Account.IsActive, Converter={StaticResource BoolToStatusConverter}}"
                       FontSize="12"
                       TextColor="White"
                       HorizontalOptions="Center" />
            </Frame>
        </Grid>
    </Border>
</ContentView>