<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiBankingExercise.Views.Controls.BalanceCard"
             x:Name="BalanceCardView">

    <Border BackgroundColor="{AppThemeBinding Light=#1976D2, Dark=#1565C0}"
            Padding="20"
            Margin="16,8">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="16" />
        </Border.StrokeShape>

        <StackLayout>
            <Label Text="{Binding Source={x:Reference BalanceCard}, Path=Title}" 
                   FontSize="16" 
                   TextColor="White"
                   Opacity="0.9" />
            <Label Text="{Binding Source={x:Reference BalanceCard}, Path=FormattedBalance}" 
                   FontSize="32" 
                   FontAttributes="Bold"
                   TextColor="White"
                   Margin="0,8,0,0" />
            <Label Text="{Binding Source={x:Reference BalanceCard}, Path=Subtitle}" 
                   FontSize="14" 
                   TextColor="White"
                   Opacity="0.8"
                   Margin="0,4,0,0" />
        </StackLayout>
    </Border>
</ContentView>