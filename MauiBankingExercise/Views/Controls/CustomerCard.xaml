<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiBankingExercise.Views.Controls.CustomerCard"
             x:Name="CustomerCardView">

    <Border BackgroundColor="{AppThemeBinding Light=White, Dark=#2D2D30}"
            Stroke="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"
            StrokeThickness="1"
            Padding="16"
            Margin="8,4">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="12" />
        </Border.StrokeShape>

        <Grid ColumnDefinitions="Auto,*,Auto">
            <!-- Icon -->
            <Border Grid.Column="0" 
                    BackgroundColor="{AppThemeBinding Light=#F0F0F0, Dark=#404040}"
                    HeightRequest="50" 
                    WidthRequest="50"
                    Margin="0,0,12,0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="25" />
                </Border.StrokeShape>
                <Label Text="ðŸ‘¤" 
                       FontSize="24" 
                       HorizontalOptions="Center" 
                       VerticalOptions="Center" />
            </Border>

            <!-- Customer Info -->
            <StackLayout Grid.Column="1" VerticalOptions="Center">
                <Label Text="{Binding FirstName}" 
                       FontSize="18" 
                       FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                <Label Text="{Binding LastName}" 
                       FontSize="14" 
                       TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" />
                <Label Text="{Binding Email}" 
                       FontSize="14" 
                       TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" />
            </StackLayout>

            <!-- Arrow -->
            <Label Grid.Column="2" 
                   Text="â€º" 
                   FontSize="24" 
                   FontAttributes="Bold"
                   TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}"
                   VerticalOptions="Center" />
        </Grid>
    </Border>
</ContentView>