<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:MauiBankingExercise.Views.Controls"
             x:Class="MauiBankingExercise.Views.Pages.CustomerSelectionPage"
             Title="Select Customer"
             BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#1E1E1E}">

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <StackLayout Grid.Row="0" Padding="20,20,20,10">
            <Label Text="Welcome to Banking App" 
                   FontSize="28" 
                   FontAttributes="Bold"
                   TextColor="{AppThemeBinding Light=Black, Dark=White}"
                   HorizontalOptions="Center" />
            <Label Text="Select a customer to continue" 
                   FontSize="16" 
                   TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}"
                   HorizontalOptions="Center"
                   Margin="0,8,0,0" />
        </StackLayout>

        <!-- Customer List -->
        <CollectionView Grid.Row="1" 
                       x:Name="collectionView"
                       ItemsSource="{Binding Customers}"
                       SelectedItem="{Binding SelectedCustomer}"
                       SelectionMode="Single"
                       Margin="8,0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <controls:CustomerCard Customer="{Binding}" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Loading Indicator -->
        <ActivityIndicator Grid.Row="1" 
                          IsVisible="{Binding IsBusy}" 
                          IsRunning="{Binding IsBusy}"
                          Color="{AppThemeBinding Light=#1976D2, Dark=#64B5F6}"
                          HorizontalOptions="Center"
                          VerticalOptions="Center" />

        <!-- Refresh Button (optional) -->
        <Button Grid.Row="2"
                Text="Refresh Customers"
                Command="{Binding LoadCustomersCommand}"
                Margin="20,10"
                HorizontalOptions="Center" />
    </Grid>
</ContentPage>